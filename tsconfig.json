{
  "compilerOptions": {
    "outDir": "dist", // 输出的目录
    "sourceMap": true, // 才用sourceMap 方便源码调试
    "target": "es2015", // 目标语法
    "module": "ESNext", // 模块格式
    "moduleResolution": "node", // 模块解析方式
    "strict": false,
    "resolveJsonModule": true, // 解析json模块
    "esModuleInterop": true, // 允许通过es6语法引入commonjs模块
    "jsx": "preserve", // jsx 不转义
    "lib": ["ESNext", "DOM"], // 支持的类库 esnext和dom
    "baseUrl": "./",
    "paths": {
      "@shebao/*": ["packages/*/"] // @vue/ 指定到 packages/*/src下去找
    }
  }
}